{
  "name": "@astroflora/evm-dao-bridge-contracts",
  "version": "1.0.0",
  "description": "ERC-20 test contracts for EVM DAO Bridge snapshot testing",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:anvil": "hardhat run scripts/deploy.ts --network anvil",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network sepolia",
    "test": "hardhat test",
    "test:anvil": "hardhat test --network anvil",
    "node": "hardhat node",
    "anvil": "anvil --host 0.0.0.0 --port 8545 --chain-id 31337",
    "anvil:fork": "anvil --host 0.0.0.0 --port 8545 --fork-url"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@types/node": "^20.11.0",
    "hardhat": "^2.19.0",
    "typescript": "^5.3.0",
    "ethers": "^6.4.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0"
  }
}
